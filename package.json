{
  "name": "@chiffre/design-system",
  "version": "0.0.0-semantically-released",
  "description": "Shared UI components for Chiffre",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "francois.best@chiffre.io",
    "url": "https://chiffre.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chiffre-io/design-system"
  },
  "keywords": [
    "chiffre",
    "design-system",
    "react",
    "chakra-ui",
    "next.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "next",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc --project tsconfig.base.json",
    "build": "run-s build:clean build:ts",
    "ci": "run-s build test"
  },
  "dependencies": {
    "@47ng/chakra-next": "^2.1.2",
    "@chiffre/analytics-processing": "^1.0.0",
    "@nivo/pie": "^0.61.1"
  },
  "devDependencies": {
    "@chakra-ui/core": "^0.7.0",
    "@commitlint/config-conventional": "^8.3.4",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "commitlint": "^8.3.5",
    "emotion-theming": "^10.0.27",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "next": "^9.3.5",
    "next-transpile-modules": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(@47ng/chakra-next)/)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  },
  "peerDependencies": {
    "@chakra-ui/core": "^0.7.0",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "next": "^9.3.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
